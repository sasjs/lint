{
  "compilerOptions": {
      "lib": [
          "ES2018",
          "DOM",
          "ES2019.String"
      ],
      "target": "es6",
      "module": "commonjs",
      "downlevelIteration": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "declaration": true,
      "outDir": "./build",
      "strict": true,
      "sourceMap": true
  },
  "include": [
      "src"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/example.ts"
  ]
}
